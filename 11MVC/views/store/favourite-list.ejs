<div class="flex flex-wrap justify-center gap-6">
  <% if (registeredHomes && registeredHomes.length > 0) { %>
    <% registeredHomes.forEach(home => { %>
      <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition duration-300 w-full max-w-sm">
        <img src="https://scontent.fdel15-1.fna.fbcdn.net/v/t1.6435-9/95996760_598694284095560_9178273974008676352_n.jpg"
             alt="<%= home.houseName %>"
             class="w-full h-48 object-cover">

        <div class="p-4">
          <h3 class="text-xl font-semibold text-gray-800 mb-2">
            <%= home.houseName %>
          </h3>

          <p class="text-gray-600 mb-2">
            <%= home.location %>
          </p>

          <div class="flex justify-between items-center mb-2">
            <span class="text-lg font-bold text-red-500">
              Rs <%= home.price %> / night
            </span>

            <span class="text-gray-700">
              ‚≠ê <%= home.rating %>
            </span>
          </div>

          <button class="bg-green-300 px-4 py-2 rounded">
            Book
          </button>
        </div>
      </div>
    <% }) %>
  <% } else { %>
    <p class="text-gray-500 text-center text-lg">
      No favourite homes yet.
    </p>
  <% } %>
</div>
